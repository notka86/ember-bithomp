.video-list

  #youtube-video
    position fixed
    padding 0
    width 853px
    height 480px
    top 50%
    left 50%
    margin-left: -(@width / 2)
    margin-top: -(@height / 2)
    border none
    border-radius 0

  ul
    list-style-type none
    margin 0
    padding 0
    text-align center

  li
    display inline-block
    width 280px
    height 200px
    text-align center

    .video
      height 200px
      background-color black
      box-shadow 0px 1px 3px 2px rgba(0, 0, 0, 0.14)
      background-size 24px
      background-repeat no-repeat
      background-position center center
      background-image url("../images/loading-black.gif")
      //margin 30px
      transform scale(0.9)
      transition all 0.3s

      img
        height 200px

    .video:hover
      box-shadow 0px 1px 3px 2px rgba(0, 0, 0, 0.3)
      cursor pointer
      transform scale(1)

    p
      display inline-block
      background-color rgba(232, 232, 232, 0.8)
      padding 5px 17px
      border-radius 16px
      color rgb(100, 100, 100)
      max-width 100%
      overflow hidden
      box-sizing border-box
      text-overflow ellipsis
      white-space nowrap
