.main-box
  width 450px
  position relative
  margin 40px auto
  background linear-gradient(to bottom, rgba(245,245,245,1) 0%,rgba(255,255,255,1) 19%,rgba(255,255,255,1) 77%,rgba(245,245,245,1) 100%)
  box-shadow 0px 0px 0px 5px rgba(0,0,0,0.15)

  h1, h2
    padding-bottom 10px
    text-align center
    color $grey
    font-weight 600
    font-size 16px
    line-height 16px

  h1
    padding-top 50px

  hr
    height 2px
    margin 15px 0
    border none
    background linear-gradient(to right, rgba(249,249,249,0.25) 0%,rgba(249,249,249,1) 50%,rgba(249,249,249,0.25) 100%)

  footer
    text-align center
    font-size 13px
    padding-bottom 20px

  @media (max-width: 470px)
    margin-top 20px
    width 300px

    h1, h2
      font-size 14px
      line-height 14px

    footer
      font-size 11px
