.main-box
  width 400px
  position relative
  margin 40px auto
  background linear-gradient(to bottom, rgba(245,245,245,1) 0%,rgba(255,255,255,1) 19%,rgba(255,255,255,1) 77%,rgba(245,245,245,1) 100%)
  box-shadow 0px 0px 0px 5px rgba(0,0,0,0.15)
  min-height 400px

  h1
    padding-top 50px
    padding-bottom 10px
    text-align center
    color $grey
    font-weight 600
    font-size 16px
    line-height 16px
