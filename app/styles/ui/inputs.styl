input, button, select, textarea
  font-family "Helvetica Neue",Helvetica,Arial,sans-serif

.input-prepend
  text-align center
  font-size 0
  margin 20px

  .prepend
    display inline-block
    width 20px
    height 20px
    font-size 14px
    border 1px solid $grey-light
    vertical-align top
    padding 4px 5px

    i
      opacity 0.1

    &.active
      i
        opacity 0.7
        color $blue
  
input
  width 340px
  height 20px
  padding 4px 6px
  font-size 14px
  border 1px solid $grey-light

input[readonly]
  background-color $grey-light
  color $grey

.status
  display inline-block
  margin-top 8px
  margin-left 64px
