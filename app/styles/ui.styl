html
  margin 0

  body
    margin 0
    border none
    background url(../images/ui/bg.jpg)
    color $black
    font-family 'Open Sans', sans-serif
    font-weight 400
    font-size 14px
    line-height 20px

    button
      cursor pointer
      margin-right 7px
      margin-left 7px
      margin-bottom 14px
      background-color $blue-button
      border 1px solid 
      border-color $blue-button
      color $white
      font-size 14px
      font-weight 500
      padding 6px 12px
      box-shadow inset 0 1px 0 rgba(255,255,255,0.2),0 1px 2px rgba(0,0,0,0.05)

      &:hover
        background-color $blue-active
        border-color $blue-active-border
    
    a
      color $grey
      text-decoration none

      &:hover, &:focus
        color $blue-link
        text-decoration underline

    .table
      display table

    .table-row
       display table-row

    .table-cell
       display table-cell

    .blue
      color $blue

    .red
      color $red

    .green
      color $green

    .orange
      color $orange

@import "ui/main-box"
@import "ui/social-icons"
@import "ui/xrp-price"
