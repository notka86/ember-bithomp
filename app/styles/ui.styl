html
  margin 0

  body
    margin 0
    border none
    background url(../images/ui/bg.jpg)
    color $black
    font-family 'Open Sans', sans-serif
    font-weight 400
    font-size 14px

    button
      cursor pointer
      margin-right 7px
      margin-left 7px
      margin-bottom 14px
      background-color $blue
      border 1px solid 
      border-color $blue
      color $white
      font-size 14px
      font-weight 500
      padding 6px 12px
      box-shadow inset 0 1px 0 rgba(255,255,255,0.2),0 1px 2px rgba(0,0,0,0.05)

      &:hover
        background-color $blue-active
        border-color $blue-active-border
    
    a
      color $grey
      text-decoration none

      &:hover, &:focus
        color $link-color
        text-decoration underline

@import "ui/loading-slider"
@import "ui/main-box"
@import "ui/social-icons"
