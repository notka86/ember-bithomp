      <div class="table-row">
        <div class="table-cell td1">
          Explored at Bithomp:
        </div>
        <div class="table-cell td2 blue bold">
          {{#if explored}}
            {{add-commas explored}}
            {{#if exploredProcent}}
              ({{exploredProcent}}%)
            {{/if}}
          {{else}}
            updating...
          {{/if}}
